{
    "name": "svelte-shiki",
    "version": "0.0.1",
    "description": "A preprocessor for Svelte, adding syntax highligting through the Shiki library.",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint '*/**/*.{js,ts}' --fix",
        "prepack": "yarn build",
        "prepublish": "yarn lint && yarn test"
    },
    "files": [
        "dist/**/*"
    ],
    "author": "Morsby",
    "repository": {
        "type": "git",
        "url": "https://github.com/morsby/svelte-shiki.git"
    },
    "keywords": [
        "svelte",
        "shiki",
        "preprocessor",
        "syntax highlighting"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/estree": "^0.0.44",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.11.1",
        "@typescript-eslint/eslint-plugin": "^2.31.0",
        "@typescript-eslint/parser": "^2.31.0",
        "eslint": "^7.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "estree-walker": "^2.0.1",
        "husky": "^4.2.5",
        "jest": "^25.3.0",
        "prettier": "^2.0.5",
        "shiki-languages": "^0.1.6",
        "shiki-themes": "^0.1.7",
        "svelte": "^3.22.2",
        "ts-jest": "^25.3.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "shiki": "^0.1.7"
    },
    "peerDependencies": {
        "svelte": "^3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn format && yarn lint",
            "pre-push": "yarn test"
        }
    }
}
